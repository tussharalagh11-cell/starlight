---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Approach — TAI Analytics">
  <section style="padding:56px 0;">
    <div class="container">
      <div class="badge">Approach</div>
      <h1 style="margin:16px 0 0;font-size:40px;font-weight:950;">Serious about rigor. Obsessed with shipping.</h1>
      <p style="margin-top:12px;max-width:860px;color:rgba(17,24,39,.65);line-height:1.7;">
        We work at the intersection of merchandising, supply chain, and data engineering — focused on measurable outcomes.
      </p>

      <div class="grid cols-3" style="margin-top:24px;">
        <div class="card" style="padding:22px;">
          <h2 style="margin:0;font-size:16px;font-weight:950;">01 · Diagnose</h2>
          <p style="margin-top:8px;color:rgba(17,24,39,.65);line-height:1.6;">Workflow mapping, discovery, and risk framing.</p>
        </div>
        <div class="card" style="padding:22px;">
          <h2 style="margin:0;font-size:16px;font-weight:950;">02 · Design & Build</h2>
          <p style="margin-top:8px;color:rgba(17,24,39,.65);line-height:1.6;">Production-ready architecture and implementation.</p>
        </div>
        <div class="card" style="padding:22px;">
          <h2 style="margin:0;font-size:16px;font-weight:950;">03 · Deploy & Iterate</h2>
          <p style="margin-top:8px;color:rgba(17,24,39,.65);line-height:1.6;">Monitoring, runbooks, training, continuous improvement.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
